<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/gradientback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:elevation="8dp"
        android:background="@drawable/corner">

        <TextView
            android:id="@+id/login_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Login"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_below="@+id/login_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/login_user_id"
            android:layout_below="@+id/user_id_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/user_password_text_view"
            android:layout_below="@+id/login_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/login_user_password"
            android:layout_below="@+id/user_password_text_view"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/change_password_button"
            android:layout_below="@+id/login_user_password"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"/>

        <TextView
            android:id="@+id/forgot_password_text_view"
            android:layout_below="@+id/change_password_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Forgot Password"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>