<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:background="@drawable/gradientback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:elevation="8dp"
        android:background="@drawable/corner">

        <TextView
            android:id="@+id/change_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Change Password"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/change_password_user_id_text_view"
            android:layout_below="@+id/change_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/change_password_login_user_id"
            android:layout_below="@+id/change_password_user_id_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/id_type_text_view"
            android:layout_below="@+id/change_password_login_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select ID Type"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimaryDark" />

        <Spinner
            android:id="@+id/id_type_spinner_view"
            android:layout_below="@+id/id_type_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:id="@+id/id_number_text_view"
            android:layout_below="@+id/id_type_spinner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Number"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/id_number_edit_text"
            android:layout_below="@+id/id_number_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/new_password_text_view"
            android:layout_below="@+id/id_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/new_password_edit_text"
            android:layout_below="@+id/new_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/change_password_button"
            android:layout_below="@+id/new_password_edit_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>